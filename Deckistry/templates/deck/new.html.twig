{% extends 'base.html.twig' %}

{% block title %}Nouveau deck{% endblock %}

{% block body %}
<div class="deck-new-page">
    <div class="deck-new-header">
        <h1>Nouveau deck</h1>
    </div>

    <div class="deck-new-container">
        {{ form_start(form, {'attr': {'class': 'deck-form'}}) }}
            
            <div class="form-group">
                <label for="{{ form.name.vars.id }}">Nouveau deck</label>
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                <label for="{{ form.format.vars.id }}">Format</label>
                {{ form_widget(form.format) }}
                {{ form_errors(form.format) }}
            </div>

            <div class="form-group visibility-group">
                <div class="visibility-options">
                    {% for choice in form.isPrivate %}
                        <label class="visibility-option {% if choice.vars.checked %}active{% endif %}">
                            {{ form_widget(choice) }}
                            <span class="option-box">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    {% if choice.vars.label == 'Privée' %}
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    {% else %}
                                        <path d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"></path>
                                        <path d="M9 12h6"></path>
                                    {% endif %}
                                </svg>
                                <span class="option-label">{{ choice.vars.label }}</span>
                            </span>
                        </label>
                    {% endfor %}
                </div>
                {{ form_errors(form.isPrivate) }}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Créer un deck</button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

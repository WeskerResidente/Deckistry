{% extends 'base.html.twig' %}

{% block title %}Browse Decks - Deckistry{% endblock %}

{% block body %}
<div class="container" style="padding: 60px 0;">
    <h1>Browse Decks</h1>
    
    {% if decks is empty %}
        <p>No public decks available yet.</p>
        <a href="{{ path('app_deck_new') }}" class="btn btn-primary">Create Your First Deck</a>
    {% else %}
        <div class="decks-grid">
            {% for deck in decks %}
                <div class="deck-card">
                    <h3>{{ deck.name }}</h3>
                    <p>Format: {{ deck.format }}</p>
                    <p>By: {{ deck.user.username }}</p>
                    <a href="{{ path('app_deck_view', {username: deck.user.username, slug: deck.slug}) }}" class="btn btn-secondary">View Deck</a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
